<div class="visitor-profile-summary visitor-profile-resume">
    <h1>{{ 'AOM_VisitorProfile_Summary'|translate }}</h1>

    <p>{{ 'AOM_VisitorProfile_TotalCost'|translate(totalVisits, totalCost) }}</p>
