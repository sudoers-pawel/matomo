        <p>{{ 'AOM_VisitorProfile_TotalRevenue'|translate(totalRevenue, totalConversions) }}</p>
        <p><strong>{{ 'AOM_VisitorProfile_TotalReturnOnInvest'|translate(ratio, totalRevenue, totalCost) }}</strong></p>
    {% endif %}
</div>